{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true  // 如果您打算逐渐将JS文件迁移到TS
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js"  // 包含JS文件，如果您打算逐渐迁移到TS
  ],
  "exclude": [
    "node_modules",
    ".vscode",  // 通常不需要对IDE配置进行类型检查
    "public"    // 静态资源目录，不需要TypeScript处理
  ]
}
